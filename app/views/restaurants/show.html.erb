<h1 class="d-flex justify-content-center"><%= @restaurant.name %></h1>

<h2><strong>Address:</strong>
    <%= @restaurant.address %></h2>

<h3><strong>Category:</strong>
    <%= @restaurant.category %></h3>

<h4>Contact-Us: <%= @restaurant.phone_number %></h4>

<h4>The reviews</h4>

<ul>
<% @restaurant.reviews.each do |review| %>
  <li>
        <%= review.content %>
        <%= review.rating %>
  </li>
<% end %>
</ul>

<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
<%= link_to 'All Restaurants', restaurants_path(@restaurant) %>
